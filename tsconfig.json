{
	"compileOnSave": true,
	"compilerOptions": {
		"allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
		"baseUrl": "./src",
		/* Base directory to resolve non-absolute module names. */
		"paths": {
			"screens": ["./screens"],
			"components": ["./components"],
      "images": ["./images"],
      "helpers": ["./helpers"]
		},
	},
	"exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}